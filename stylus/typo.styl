// typo defaults
a:link 
    transition: 0.5s
a:hover
    transition: 0.5s
a:link:not(.ctaButton, .icon)
    color: brand1
a:visited:not(.ctaButton, .icon)
    color: brand1
a.vanilla
    text-decoration: none

.activeLink
    font-weight: 600 !important

// custom typo
ul
    margin-bottom: 2em
    padding-left: 1em

ul li
    font-size: 1em
    line-height: 1.4em
    margin-bottom: 0.4em
    list-style-type: disc


.activeLink,
p a:hover,
li a:hover,
*.picturefill-background a:hover
    color: brand0 !important
    transition: 500ms




h1, h2, h3, h4 ,h5, h6
    margin: 0
    margin-bottom: 5px

// defaults   
h1
    font-weight: 700
    font-size: 3.5em
    line-height: 105%
    letter-spacing: -0.035em

h2
    font-weight: 600
    font-size: 3em
    line-height: 105%
    letter-spacing: -0.045em
   
h3
    font-weight: 600
    font-size: 1.9em
    line-height: 115%
    letter-spacing: -0.035em
   
h4
    font-weight: 600
    font-size: 1.7em
    line-height: 120%
    letter-spacing: -0.01em   
h5
    font-weight: 400
    font-size: 1.2em
    line-height: 125%
    letter-spacing: -0.02em
    
h6
    font-weight: 500
    font-size:1.2em
    line-height: 130%
    letter-spacing: -0.015em
p
    font-weight: 300
    font-size: 1em
    line-height: 1.4em
    letter-spacing: -0.015em
    margin-top: 0.75em
    margin-bottom: 1.5em
strong 
    font-weight: 800
    letter-spacing: -0.015em

// modify typo
.small
    font-size: 0.9em    

.light
    font-weight:300
.lighter
    font-weight:200




@media mtrigger
    h1
        font-size: 2em   
        line-height: 110%
    *.picturefill-background h1
        font-size: 2.2em   
        line-height: 110%    
    h2
        font-size: 2em
        line-height: 110%
        //width:85%
    h3
        font-size: 1.4em
        line-height: 110%
    h4
        font-size: 1.4em
        line-height: 110%
    h5
        font-size: 1.2em
        line-height: 110%
    h6
        font-size: 1.1em
        line-height: 110%

    p
        font-size: 1em
    h1, h2, h3, h4, h5, h6, p
        margin-bottom: 0.5em;




p.intro
    width auto
    @media dtrigger
        width:80%



.text-header
    max-width: 80%
    height: auto
